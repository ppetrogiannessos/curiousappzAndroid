<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.curiousappz.www.carky_test.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@mipmap/home_icon"
            android:layout_margin="10dp"
            android:layout_weight="1"

            />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@mipmap/carky_logo"
            android:layout_weight="6"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="30dp"
            android:background="@mipmap/route_icon"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
       >

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:background="@mipmap/flow_img"/>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="150dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Personal Details"/>


        <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:id="@+id/etName"
            android:hint="Name"
            android:textColorHint="#c0c0c0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName" />
        <EditText

            android:id="@+id/etSurname"
            android:hint="Surname"
            android:textColorHint="#c0c0c0"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1" />
</LinearLayout>
        <EditText
            android:id="@+id/etAddress"
            android:layout_marginTop="10dp"
            android:hint="Address"
            android:textColorHint="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:textColorHint="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/etCPass"
            android:hint="Confirm Password"
            android:layout_marginTop="10dp"
            android:textColorHint="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/etPhone"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            android:textColorHint="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp">

            <ImageButton
                android:id="@+id/bnext"
                android:src="@mipmap/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="next"/>
    </LinearLayout>
</RelativeLayout>
