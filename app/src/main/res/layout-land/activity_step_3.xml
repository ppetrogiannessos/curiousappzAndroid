<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_step_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.curiousappz.www.carky_test.Step_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:configChanges="orientation|screenSize"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@mipmap/home_icon"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@mipmap/carky_logo"
            android:layout_weight="10"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="30dp"
            android:background="@mipmap/route_icon"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:configChanges="orientation|screenSize"
        >
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:background="@mipmap/flow_img_car"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="#eeeeee">
        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="Upload Picture Of Your Car Following The Below Guide"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/side"/>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/front_side"/>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/three_quaters"/>
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/interior"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvforgetlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="280dp"
            android:background="#00000000"
            android:text="Skip"
            android:textSize="15sp"
            android:textColor="#c0c0c0"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/bnext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="next"
            android:layout_gravity="center"
            android:background="@mipmap/next_button"/>
    </LinearLayout>
</LinearLayout>
